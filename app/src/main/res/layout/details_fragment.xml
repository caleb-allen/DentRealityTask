<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".ui.details.DetailsFragment">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="United Kingdom" />

    <TextView
        android:id="@+id/country_code_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/country_code"
        android:textStyle="bold"
        style="@style/country_details_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/country_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/barrier_half"
        app:layout_constraintTop_toTopOf="@id/country_code_label"
        tools:text="GB" />

    <TextView
        android:id="@+id/timezones_label"
        android:text="@string/timezones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/country_code_label"
        style="@style/country_details_label" />

    <TextView
        android:id="@+id/timezones"
        style="@style/country_details_values"
        android:maxLines="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/barrier_half"
        app:layout_constraintTop_toTopOf="@id/timezones_label"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/capital_label"
        style="@style/country_details_label"
        android:text="@string/capital"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timezones" />

    <TextView
        android:id="@+id/capital"
        style="@style/country_details_values"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/barrier_half"
        app:layout_constraintTop_toTopOf="@id/capital_label"
        tools:text="@tools:sample/cities" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_half"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:barrierDirection="end"
        app:barrierMargin="34dp"
        app:constraint_referenced_ids="capital_label,country_code_label,timezones_label" />

</androidx.constraintlayout.widget.ConstraintLayout>